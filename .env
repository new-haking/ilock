# AuthLook Backend Configuration

# Database
DATABASE_URL=sqlite:///./authlook.db
# Para PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/authlook

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-a-long-random-string

# OAuth - Google
# Obtenha em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# OAuth - Discord
# Obtenha em: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# Frontend URL (para redirecionar após OAuth)
FRONTEND_URL=https://authlook.cc

# CORS (separar por vírgula)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500,https://authlook.cc

